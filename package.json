{
  "name": "wrike-graphql",
  "private": true,
  "version": "0.0.0-development",
  "description": "Demo of wrapping REST API by GraphQL",
  "repository": "https://github.com/nodkz/wrike-graphql",
  "devDependencies": {
    "@graphql-codegen/cli": "1.15.1",
    "@graphql-codegen/typescript-graphql-request": "1.15.1",
    "@graphql-codegen/typescript-operations": "1.15.1",
    "@types/debug": "^4.1.5",
    "@types/jest": "25.2.3",
    "@types/node": "14.0.9",
    "@typescript-eslint/eslint-plugin": "3.1.0",
    "@typescript-eslint/parser": "3.1.0",
    "cross-env": "7.0.2",
    "eslint": "7.1.0",
    "eslint-config-prettier": "6.11.0",
    "eslint-plugin-prettier": "3.1.3",
    "jest": "26.0.1",
    "prettier": "2.0.5",
    "rimraf": "^3.0.2",
    "ts-jest": "26.1.0",
    "ts-node-dev": "^1.0.0-pre.44",
    "typescript": "3.9.3"
  },
  "scripts": {
    "dev": "ts-node-dev --no-notify --respawn --watch src/schema src/server.ts",
    "lint": "eslint --ext .ts ./src",
    "watch": "DEBUG=axios:* jest --env node --watch",
    "test": "jest --env node",
    "build": "tsc -p ./tsconfig.build.json",
    "docker-build": "rimraf ./dist && yarn build && docker build -t nodkz/wrike-graphql .",
    "dockerhub-push": "docker push nodkz/wrike-graphql:latest",
    "deploy-heroku": "docker tag nodkz/wrike-graphql:latest registry.heroku.com/graphql-wrike/web:latest && docker push registry.heroku.com/graphql-wrike/web:latest && heroku container:release web -a graphql-wrike",
    "deploy": "yarn docker-build && yarn deploy-heroku && yarn dockerhub-push",
    "gen-schema": "ts-node ./bonus/generateSchema",
    "gen-sdk": "yarn gen-schema && yarn graphql-codegen -c ./bonus/codegen.yml",
    "start": "ts-node -T src/server.ts",
    "start-no-dl": "DISABLE_DATALOADERS=1 ts-node -T src/server.ts",
    "start-restql": "DISABLE_RELATIONS=1 DISABLE_BACK_RELATIONS=1 ts-node -T src/server.ts"
  },
  "dependencies": {
    "apollo-server-express": "2.14.1",
    "axios": "^0.19.2",
    "dataloader": "^2.0.0",
    "debug": "^4.1.1",
    "dotenv": "^8.2.0",
    "express": "^4.17.3",
    "graphql": "15.0.0",
    "graphql-compose": "7.18.1",
    "graphql-compose-json": "5.3.0",
    "graphql-compose-modules": "1.3.1",
    "graphql-query-complexity": "^0.6.0",
    "graphql-voyager": "1.0.0-rc.31",
    "module-alias": "^2.2.2",
    "nodemon": "2.0.4"
  }
}
